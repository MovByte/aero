{
	"$schema": "https://raw.githubusercontent.com/denoland/deno/refs/tags/v2.0.2/cli/schemas/config-file.v1.json",
	"name": "@aero/sandbox",
	"version": "0.0.2",
	"license": "AGPL-3.0-or-later",
	"publish": {
		"include": [
			"scripts/**/*.ts",
			"dist/**/*",
			"tests/**",
			"LICENSE",
			"README.md"
		],
		"exclude": ["!dist/", "scripts/runtime/**/*.ts"]
	},
	"tasks": {
		"rsdoctor": "kill $(lsof -t -i:3301) & rsdoctor analyze --profile AeroSandbox/dist/debug/.rsdoctor/manifest.json --port 3301",
		"format:biome": "biome format --write && biome check --write",
		"serve": "rspack serve",
    "build": "deno run --allow-all ./build/build.ts",
		"buildRaw": "BUILD_CONFIG_PATH=./buildConfigs/aero && rspack build",
		"init:apis": "deno run ./scripts/initApis.ts",
		"init:api-types": "deno run --allow-write ./scripts/initApiTypes.ts",
		"init:dist": "deno run --allow-read --allow-write ./scripts/InitDist.ts",
		"init-globals:biome": "deno run --allow-read --allow-write ./scripts/init-globals:biome.ts",
		"init-globals:ts": "deno run --allow-read --allow-write ./scripts/initGlobalsTs.ts"
	},
	"include": ["scripts/**/*.ts"],
	"exclude": ["scripts/runtime/**/*.ts"],
	"lint": {
		"include": ["scripts/**/*.ts"],
		"exclude": ["scripts/runtime/**/*.ts"]
	},
	"fmt": {
		"include": ["scripts/**/*.ts"],
		"exclude": ["scripts/runtime/**/*.ts"],
		"useTabs": true,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": false
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "@types/websql"
    ]
  }
}
