{
	"$schema": "https://raw.githubusercontent.com/denoland/deno/refs/tags/v2.0.2/cli/schemas/config-file.v1.json",
	"name": "@aero/sandbox",
	"version": "0.0.2",
	"license": "AGPL-3.0-or-later",
	"publish": {
		"include": [
			"scripts/**/*.ts",
			"dist/**/*",
			"tests/**",
			"LICENSE",
			"README.md"
		],
		"exclude": ["!dist/", "scripts/runtime/**/*.ts"]
	},
	"tasks": {
		"rsdoctor": "kill $(lsof -t -i:3301) & rsdoctor analyze --profile src/AeroSandbox/dist/debug/.rsdoctor/manifest.json --port 3301",
		"check": "biome check --write",
		"formatBiome": "biome format --write",
		"serve": "rspack serve",
		"build": "BUILD_CONFIG_PATH=./buildConfigs/aero && rspack build",
		"initApis": "deno run ./scripts/initApis.ts",
		"initApiTypes": "deno run --allow-write ./scripts/initApiTypes.ts",
		"initDist": "deno run --allow-read --allow-write ./scripts/InitDist.ts",
		"initGlobalsBiome": "deno run --allow-read --allow-write ./scripts/initGlobalsBiome.ts",
		"initGlobalsTs": "deno run --allow-read --allow-write ./scripts/initGlobalsTs.ts"
	},
	"include": ["scripts/**/*.ts"],
	"exclude": ["scripts/runtime/**/*.ts"],
	"lint": {
		"include": ["scripts/**/*.ts"],
		"exclude": ["scripts/runtime/**/*.ts"],
	},
	"fmt": {
		"include": ["scripts/**/*.ts"],
		"exclude": ["scripts/runtime/**/*.ts"],
		"useTabs": true,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": false
	}
}
